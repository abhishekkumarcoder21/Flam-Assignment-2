{
  "name": "collaborative-canvas",
  "version": "1.0.0",
  "description": "Real-time collaborative drawing canvas with global undo/redo",
  "main": "server/server.js",
  "scripts": {
    "start": "node dist/server/server.js",
    "dev": "ts-node-dev --respawn server/server.ts",
    "build": "tsc && npm run build:client",
    "build:client": "esbuild client/main.ts --bundle --outfile=client/dist/bundle.js --format=iife --global-name=App --external:socket.io-client"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "esbuild": "^0.19.8",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}